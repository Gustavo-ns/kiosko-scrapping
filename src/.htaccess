# Apache configuration for src directory
Options -Indexes +FollowSymLinks
DirectoryIndex index.php

# Bloquear acceso a archivos sensibles
<FilesMatch "(\.env|\.git|composer\.(json|lock)|package\.json|\.htaccess|config\.php)">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Reglas de reescritura para URLs amigables
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Redirigir archivos PHP sin extensi√≥n
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^([^.]+)$ $1.php [L]
</IfModule>
